{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "padded-blocks": ["error", "always"],
        "no-useless-escape": 0,
        "object-curly-spacing": ["error", "never"],
        "no-extend-native": ["error", {"exceptions": ["Array"]}],
        "standard/no-callback-literal": 0,
        "node/no-callback-literal": 0
    }
}
